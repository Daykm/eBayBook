<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/material_list_item_height"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/material_list_item_spacing">

    <ImageView
        android:id="@+id/image"
        android:scaleType="fitCenter"
        android:layout_width="72dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        tools:background="@android:color/holo_red_dark"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Harry Potter: Complete 8-Film Collection (DVD, 2011, 8-Disc Set)"
        android:layout_toRightOf="@+id/image"
        android:layout_alignTop="@+id/image"
        android:layout_alignBottom="@+id/image"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/error_message"
        android:visibility="gone"
        android:gravity="center"
        android:text="@string/list_error"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</RelativeLayout>